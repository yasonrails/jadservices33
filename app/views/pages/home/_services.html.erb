<section class="services" id="services" aria-label="Services viticoles Gironde Charente">
	<% services = [
		{
			title: "Taille de la vigne",
			desc: "Taille d’hiver réalisée avec précision pour équilibrer la production et garantir la qualité du raisin.",
			img: "taille.jpg",
			delay: ""
		},
		{
			title: "Tombée des bois",
			desc: "Nettoyage des rangs après la taille pour faciliter les travaux et maintenir des parcelles propres.",
			img: "tombee.jpg",
			delay: " reveal-delay-1"
		},
		{
			title: "Calage des vignes",
			desc: "Maintien et alignement des pieds pour assurer stabilité, longévité et mécanisation optimale.",
			img: "calage.jpg",
			delay: " reveal-delay-2"
		},
		{
			title: "Pliage",
			desc: "Fixation des bois pour favoriser une pousse homogène et une bonne répartition des bourgeons.",
			img: "pliage.jpg",
			delay: ""
		},
		{
			title: "Épamprage",
			desc: "Suppression des pousses inutiles afin d’améliorer la qualité et la concentration de la vigne.",
			img: "Épamprage.jpg",
			delay: " reveal-delay-1"
		},
		{
			title: "Levage",
			desc: "Relevage et maintien des rameaux pour une meilleure exposition, aération et protection.",
			img: "levage.jpg",
			delay: " reveal-delay-2"
		}
	] %>

	<div class="services-inner">
		<div class="services-header">
			<div>
				<span class="section-label reveal">Nos prestations</span>
				<h2 class="display reveal reveal-delay-1">Services viticoles<br><em>professionnels</em></h2>
			</div>
			<p class="services-header-sub reveal reveal-delay-2">
				Intervention sur tous types de vignobles, de la taille d&rsquo;hiver aux vendanges.
			</p>
		</div>

		<div class="services-grid">
			<% services.each_with_index do |service, index| %>
				<article class="service-card reveal<%= service[:delay] %>" style="background-image: url('<%= asset_path(service[:img]) %>');">
					<div class="service-content">
						<span class="service-num"><%= format("%02d", index + 1) %></span>
						<h3><%= service[:title] %></h3>
						<p><%= service[:desc] %></p>
					</div>
				</article>
			<% end %>
		</div>
	</div>
</section>
